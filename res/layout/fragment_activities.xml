<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities">

    <TextView
        android:id="@+id/Tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="42dp"
        android:fontFamily="serif"
        android:text="Activities"
        android:textAlignment="center"
        android:textSize="55dp"
        android:textStyle="bold|italic" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginTop="160dp">

        <ImageButton
            android:id="@+id/Creativity"
            android:layout_width="155dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:background="#AED7D9"
            android:backgroundTint="#AED7D9"
            android:contentDescription="Null"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055"
            app:srcCompat="@drawable/creativity" />

        <ImageButton
            android:id="@+id/Resources"
            android:layout_width="155dp"
            android:layout_height="200dp"
            android:background="#F7D5D3"
            android:backgroundTint="#F7D5D3"
            android:contentDescription="Null"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.921"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055"
            app:srcCompat="@drawable/resources" />

        <ImageButton
            android:id="@+id/Relaxation"
            android:layout_width="155dp"
            android:layout_height="200dp"
            android:background="#937885"
            android:backgroundTint="#937885"
            android:contentDescription="Null"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Creativity"
            app:layout_constraintVertical_bias="0.257"
            app:srcCompat="@drawable/relaxation" />

        <ImageButton
            android:id="@+id/Physical"
            android:layout_width="155dp"
            android:layout_height="200dp"
            android:background="#407D95"
            android:backgroundTint="#43849E"
            android:contentDescription="Null"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.921"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Resources"
            app:layout_constraintVertical_bias="0.257"
            app:srcCompat="@drawable/physical" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>