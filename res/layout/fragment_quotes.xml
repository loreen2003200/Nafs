<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCF9F6"
    android:backgroundTint="#FCF9F6"
    android:rotation="0"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/quotes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:background="#FCF9F6"
        android:backgroundTint="#FCF9F6"
        android:fontFamily="serif"
        android:text="Quotes"
        android:textSize="60sp"
        android:textStyle="bold|italic" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginTop="160dp">


        <ImageButton
            android:id="@+id/anxiety"
            android:layout_width="155dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:background="#AED7D9"
            android:backgroundTint="#AED7D9"
            android:contentDescription="Null"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055"
            app:srcCompat="@drawable/anxiety" />

        <ImageButton
            android:id="@+id/love"
            android:layout_width="155dp"
            android:layout_height="200dp"
            android:background="#F7D5D3"
            android:backgroundTint="#F7D5D3"
            android:contentDescription="Null"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.921"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.055"
            app:srcCompat="@drawable/love" />

        <ImageButton
            android:id="@+id/poetic"
            android:layout_width="155dp"
            android:layout_height="200dp"
            android:layout_marginBottom="4dp"
            android:background="#937885"
            android:backgroundTint="#937885"
            android:contentDescription="Null"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/anxiety"
            app:layout_constraintVertical_bias="0.257"
            app:srcCompat="@drawable/poetic" />

        <ImageButton
            android:id="@+id/motivation"
            android:layout_width="155dp"
            android:layout_height="200dp"
            android:background="#407D95"
            android:backgroundTint="#43849E"
            android:contentDescription="Null"
            android:elevation="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.921"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/love"
            app:layout_constraintVertical_bias="0.257"
            app:srcCompat="@drawable/motivation" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>