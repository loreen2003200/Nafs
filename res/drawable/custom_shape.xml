<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- "first layer, aka, the shadow layer -->
    <item android:top="3px">
        <shape android:shape="rectangle">
            <solid android:color="#36000000"/>
            <corners android:radius="25dp" />
            <padding
                android:bottom="10px"
                android:left="10px"/>


        </shape>
    </item>


    <!-- "second layer, therefor the uppermost layer" -->
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="25dp"/>

            <solid android:color="@color/darkRose" />

            <size
                android:width="100dp"
                android:height="50dp"/>


        </shape>
    </item>




</layer-list>